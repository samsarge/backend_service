<div class="vlc-devise">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-4 w-full md:w-1/2' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="vlc-input">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <%= f.submit "Send me reset password instructions", class: 'vlc-button primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
