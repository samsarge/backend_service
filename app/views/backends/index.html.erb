<p id="notice"><%= notice %></p>

<h1>My backends</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Subdomain</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @backends.each do |backend| %>
      <tr>
        <td><%= backend.name %></td>
        <td><%= backend.subdomain %></td>
        <td><%= backend.user_id %></td>
        <td><%= link_to 'Show', backend %></td>
        <td><%= link_to 'Edit', edit_backend_path(backend) %></td>
        <td><%= link_to 'Destroy', backend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Backend', new_backend_path %>
